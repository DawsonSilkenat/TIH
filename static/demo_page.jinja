<html lang="en">
<head>
    <title>TIH LLM Demo</title>
</head>
<body>
    <form action="/" method="post">
        <label for="prompt">Enter your prompt:</label><br>
        <textarea id="prompt" name="prompt" rows="4" cols="50"></textarea><br>
        <input type="submit" value="Generate Text">
    </form>
    {% if llm_answer %}
    <p>{{ llm_answer }}</p>
    {% endif %}
</body>
</html>
